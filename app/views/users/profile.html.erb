<h1><%= @user.to_s %> <small><%= link_to 'редактировать профиль', profile_edit_path %></small></h1>
<p><strong>О себе:</strong> <%= @user.about %></p>

<% unless @user.news.empty? %>
  <h4>Ваши публикации:</h4>
  <ul>
    <% @user.news.each do |news| %>
      <li><%= link_to news.title, news_path(news) %></li>
    <% end %>
  </ul>
<% end %>