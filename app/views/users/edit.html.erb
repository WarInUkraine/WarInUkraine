<h1>Редактирование профиля</h1>

<%= form_for @user, url: profile_update_path do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <p>
        <strong>
          <%= "#{@user.errors.count} #{Russian.pluralize(@user.errors.count, 'ошибка', 'ошибки', 'ошибок')}:" %>
        </strong>
      </p>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group<%= ' has-error' unless @user.errors[:first_name].empty? %>">
        <%= f.label :first_name, class: 'control-label' %>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group<%= ' has-error' unless @user.errors[:last_name].empty? %>">
        <%= f.label :last_name, class: 'control-label' %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group<%= ' has-error' unless @user.errors[:about].empty? %>">
    <%= f.label :about, class: 'control-label' %>
    <%= f.text_area :about, class: 'form-control' %>
  </div>

  <h4>Смена пароля</h4>

  <div class="form-group<%= ' has-error' unless @user.errors[:password].empty? %>">
    <%= f.label :password, class: 'control-label' %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="form-group<%= ' has-error' unless @user.errors[:password_confirmation].empty? %>">
    <%= f.label :password_confirmation, class: 'control-label' %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>


  <%= f.submit 'Редакировать', class: 'btn btn-primary' %>
  <%= link_to 'Назад в профиль', profile_path, class: 'btn btn-warning' %>
<% end %>