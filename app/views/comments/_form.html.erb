<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div class="alert alert-danger">
      <p>
        <strong>
          <%= "#{@comment.errors.count} #{Russian.pluralize(@comment.errors.count, 'ошибка', 'ошибки', 'ошибок')}:" %>
        </strong>
      </p>
      <ul>
        <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :commentable_id, class: 'control-label' %>
    <%= f.number_field :commentable_id, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :commentable_type, class: 'control-label' %>
    <%= f.text_field :commentable_type, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :email, class: 'control-label' %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :author, class: 'control-label' %>
    <%= f.text_field :author, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :text, class: 'control-label' %>
    <%= f.text_area :text, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
  </div>
<% end %>
