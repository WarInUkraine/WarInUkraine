<h1>Комментарии</h1>

<table class="table">
  <thead>
    <tr>
      <th>Комментировано</th>
      <th>Email</th>
      <th>Автор</th>
      <th>Текст</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.commentable.to_s %></td>
        <td><%= comment.email %></td>
        <td><%= comment.author %></td>
        <td><%= comment.text %></td>
        <td><%= link_to 'Показать', comment.commentable %></td>
        <td><%= link_to 'Редактировать', edit_comment_path(comment) %></td>
        <td><%= link_to 'Удалить', comment, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
