<%= form_for @page, url: @page.new_record? ? admin_pages_path : admin_page_path(@page) do |f| %>
  <% if @page.errors.any? %>
    <div class="alert alert-danger">
      <p>
        <strong>
          <%= "#{@page.errors.count} #{Russian.pluralize(@page.errors.count, 'ошибка', 'ошибки', 'ошибок')}:" %>
        </strong>
      </p>
      <ul>
        <% @page.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :url, class: 'control-label' %>
    <div class="input-group">
      <span class="input-group-addon">http://<%= request.host %>/</span>
      <%= f.text_field :url, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :title, class: 'control-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :html, class: 'control-label' %>
    <%= f.text_area :html, class: 'redactor' %>
  </div>

  <%= f.submit nil, class: 'btn btn-primary' %>
<% end %>
