<%= form_for @comment, url: admin_comment_path(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div class="alert alert-danger">
      <p>
        <strong>
          <%= "#{@comment.errors.count} #{Russian.pluralize(@comment.errors.count, 'ошибка', 'ошибки', 'ошибок')}:" %>
        </strong>
      </p>
      <ul>
        <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :email, class: 'control-label' %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :author, class: 'control-label' %>
    <%= f.text_field :author, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :author_ip, class: 'control-label' %>
    <%= f.text_field :author_ip, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :author_location, class: 'control-label' %>
    <%= f.text_field :author_location, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :text, class: 'control-label' %>
    <%= f.text_area :text, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :status, 'Статус', class: 'control-label' %>
    <%= f.select :status, options_for_select(Comment.statuses.collect { |s| [s[0].humanize, s[0]] }, selected: @comment.status) %>
  </div>

  <div class="actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
  </div>
<% end %>
